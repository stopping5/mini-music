/**index.wxss**/
.bannner{
  width: 100%;
  height: 300rpx;

}

.bannner image{
  height: 100%;
  width: 100%;
}

.nav-contianer{
  display: flex;
  
}

.nav-item{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.nav-item .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  color: #fff;
  font-size: 50rpx;
  margin: 20rpx 0;
}

.nav-item text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommend-contianer{
  padding-left: 20rpx;
}


/* 推荐内容区 */
.recommend-scroll{
  display: flex;
  height: 300rpx;
}

.scroll-item{
  width: 200rpx; 
  margin-right: 20rpx;
}

.scroll-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.scroll-item text{
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 热门风向标 */
.topContianer{
  padding: 20rpx;
}

.topSwiper{
  height: 400rpx;
}

.topSwiperItem .title{
  font-size: 30rpx; 
  line-height: 10rpx;
}

.topSwiperItem{
  width: 90%;
  background-color: #ededed;
}
.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicItem .number{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}